<p id="notice"></p>
<div class="container">

  <div class="row mb-3">
    <h5 class="bg-light text-dark"><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h5>
  </div>

  <div class="row">
    <p class="col-md-2">会員ID</p><p class="col-md-3"><%= @customer.id %></p>
  </div>


    <%= form_with model: [:admin, @customer] do |f| %>

    <div class="row mb-3">
      <%= f.label :"氏名", class: "col-md-2 col-form-label" %>
      <div class="col-md-3">
        <%= f.text_field :family_name, class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :"フリガナ", class: "col-md-2 col-form-label" %>
      <div class="col-md-3">
        <%= f.text_field :family_name_kana, class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :post_code, "郵便番号", class: "col-md-2 col-form-label" %>
      <div class="col-md-3">
      <%= f.text_field :post_code, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :address, "住所", class: "col-md-2 col-form-label" %>
      <div class="col-md-7">
      <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :phonenumber, "電話番号", class: "col-md-2 col-form-label" %>
      <div class="col-md-3">
      <%= f.text_field :phonenumber, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :email, "メールアドレス", class: "col-md-2 col-form-label" %>
      <div class="col-md-3">
      <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :"会員ステータス", class: "col-md-2 form-check-label" %>
      <div class="col-md-6 ml-3">
        <div class="row">
          <div class="col-md-2">
            <%= f.radio_button :is_deleted, :false, class: "form-check-input" %>
            <%= f.label :is_deleted, "有効", class: "form-check-label" %>
          </div>
          <div class="col-md-2">
            <%= f.radio_button :is_deleted, :true, class: "form-check-input" %>
            <%= f.label :is_deleted, "退会", class: "form-check-label" %>
          </div>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-3 offset-md-2">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
    </div>

    <% end %>

</div>