<p id="notice"></p>
<div class="container">

  <div class="row">
    <h5 class="bg-light text-dark">注文履歴一覧</h5>
  </div>

  <div class="row">
    <div class="col-md-9 mx-auto">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @order.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order.id) do %>
            <%= l order.created_at ,format: :long%>
            <% end %>
          </td>
          <td><%= @full_name %></td>
          <td><%= order.order_details.sum(:quantity) %></td>
          <td><%= order.orders_status %></td>
        <% end %>
        </tr>
      </tbody>
    </table>
    </div>
    <!--<div class="col-md-2"></div>-->

  </div>

  <div class="row">
    <div class="d-block mx-auto">
      <%= paginate @order %>
    </div>
  </div>

</div>