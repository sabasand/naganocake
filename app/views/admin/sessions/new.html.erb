<div class="container">
  <div class="row justify-content-start">
    <div class="col-sm-3 offset-1">
      <h4>管理者ログイン</h4>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-sm-2">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label :メールアドレス, class: "col-form-label" %>
    </div>
    <div class="col-sm-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:"form-control form-control-sm"%>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-sm-2">
      <%= f.label :パスワード, class: "col-form-label" %>
    </div>
    <div class="col-sm-4">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-sm" %>
    </div>
  </div>
