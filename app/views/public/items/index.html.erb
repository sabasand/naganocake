<!-- 商品一覧 -->
<div class="container">
  <div class="row">
    <!-- サイドバー -->
    <div class="col-lg-3">
      <table border="1">
        <thead>
          <tr valign="middle">
            <th width="100">ジャンル検索</th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>       <!-- ジャンル -->
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- 商品一覧 -->
    <div class="col-lg-9">
      <div>
        <h2>商品一覧（全<%= @item_count %>）件</h2>     <!-- 商品の件数表示設定 -->
      </div>
    <div class="row">
      <% @items.each do |item|%>
        <div class="item_index col-3">                 <!-- 商品の一覧表示 -->
          <%= link_to public_item_path(item) do%>      <!-- 商品の詳細画面へのリンク-->
            <!-- 画像 -->
            <%= image_tag item.get_image(150, 100) %>
          <% end %>

          <div>
            <!-- 商品名 -->
            <p><%= item.name %></p>

            <!-- 商品価格（税込） -->
            <% if item.is_active == true %>
              <p>￥<%= (item.price * 1.1).to_i %></p>   <!-- 販売ステータスが「true」の場合、商品価格（税込） -->
            <% else %>
              <p>販売停止中</p>                         <!-- 販売ステータスが「false」の場合、販売停止中 -->
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
       <%= paginate @items, class:"text-center" %>
    </div>
  </div>
</div>