<div class="container d-flex justify-content-center flex-column align-items-center">
  <h3 class="card-body bg-light">新規会員登録</h3>

  <div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :名前 %>
        <%= f.label :"(姓)" %>
        <%= f.text_field :family_name %>
        <%= f.label :"(名)" %>
        <%= f.text_field :first_name %>
      </div>

      <div class="field">
        <%= f.label :名前 %>
        <%= f.label :"(セイ)" %>
        <%= f.text_field :family_name_kana %>
        <%= f.label :"(メイ)" %>
        <%= f.text_field :first_name_kana%>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :"郵便番号(ハイフンなし)" %>
        <%= f.text_field :post_code %>
      </div>

      <div class="field">
        <%= f.label :住所 %>
        <%= f.text_field :address %>
      </div>

      <div class="field">
        <%= f.label :"電話番号(ハイフンなし)" %>
        <%= f.text_field :phonenumber %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(確認用)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
  <h3 class="card-body bg-light">既に登録済みの方</h3>

  <%= render "public/shared/links" %>
</div>