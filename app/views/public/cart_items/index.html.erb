<p id="notice"></p>
<div class="container">

  <div class="row mb-3">
    <div class="col-md-9">
      <h5 class="bg-light col-md-4 text-dark">ショッピングカート</h5>
    </div>
    <div class="col-md-3">
      <%= link_to "カートを空にする", public_cart_items_destroy_all_path, class: "btn btn-danger", method: :delete %>
    </div>
  </div>

     <table class="table", border="1">
      <thead class="thead-light">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= image_tag cart_item.item.get_image(40,30) %><%= cart_item.item.name %></td>
          <td><%= cart_item.item.price.to_s(:delimited) %></td>

          <td>
            <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id), method: :patch do |f| %>
            <%= f.select :quantity, *[1..20] %>
            <%= f.submit "変更", class: "btn btn-success" %>
            <% end %>
          </td>

          <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          <td><%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>

        <% @total += cart_item.subtotal %>

        </tr>
        <% end %>
      </tbody>
    </table>

  <div class="row">
    <div class="col-md-9">
      <%= link_to "買い物を続ける", public_root_path, class: "btn btn-primary" %>
    </div>

    <div class="col-md-3">
    <table class="table">
      <tr>
        <th class="bg-light">合計金額</th>
        <td><%= @total.to_s(:delimited) %></td>
      </tr>
    </table>
    </div>

  </div>


  <div class="row">
      <div class="col-md-12 text-center">
      <% if @cart_items.any? %>
      <!--カートが空だったら、ボタンを表示しない-->
        <%= link_to "情報入力に進む", new_public_order_path, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>


</div>